{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "outDir": "lib",
        "rootDir": "src"
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
